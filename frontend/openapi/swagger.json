    "components": {
      "schemas": {
        "ImageDTO": {
          "type": "object",
          "properties": {
            "imageUrl": {
              "type": "string"
            }
          }
        },
        "ProductRequest": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "description": {
              "type": "string"
            },
            "price": {
              "type": "number",
              "format": "double"
            },
            "images": {
              "type": "array",
              "items": {
                "$ref": "#/components/schemas/ImageDTO"
              }
            }
          }
        },
        "ProductResponse": {
          "type": "object",
          "properties": {
            "id": {
              "type": "integer",
              "format": "int32"
            },
            "name": {
              "type": "string"
            },
            "description": {
              "type": "string"
            },
            "price": {
              "type": "number",
              "format": "double"
            },
            "images": {
              "type": "array",
              "items": {
                "$ref": "#/components/schemas/ImageDTO"
              }
            }
          }
        },
        "AddressDTO": {
          "type": "object",
          "properties": {
            "street": {
              "type": "string"
            },
            "city": {
              "type": "string"
            },
            "postalCode": {
              "type": "string"
            }
          }
        },
        "PharmacyRequest": {
          "required": [
            "name",
            "telephone"
          ],
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "telephone": {
              "type": "string"
            },
            "address": {
              "$ref": "#/components/schemas/AddressDTO"
            }
          }
        },
        "PharmacyResponse": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "telephone": {
              "type": "string"
            },
            "address": {
              "$ref": "#/components/schemas/AddressDTO"
            }
          }
        },
        "ProductCreateDTO": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "description": {
              "type": "string"
            },
            "quantity": {
              "type": "integer",
              "format": "int32"
            },
            "price": {
              "type": "number",
              "format": "double"
            }
          }
        },
        "RegistrationRequest": {
          "required": [
            "email",
            "firstName",
            "lastName",
            "password"
          ],
          "type": "object",
          "properties": {
            "firstName": {
              "type": "string"
            },
            "lastName": {
              "type": "string"
            },
            "email": {
              "type": "string"
            },
            "password": {
              "maxLength": 20,
              "minLength": 6,
              "type": "string"
            },
            "role": {
              "type": "string"
            }
          }
        },
        "LoginRequest": {
          "required": [
            "email",
            "password"
          ],
          "type": "object",
          "properties": {
            "email": {
              "type": "string"
            },
            "password": {
              "maxLength": 20,
              "minLength": 6,
              "type": "string"
            }
          }
        },
        "AuthenticationResponse": {
          "type": "object",
          "properties": {
            "user": {
              "$ref": "#/components/schemas/UserDTO"
            },
            "token": {
              "type": "string"
            }
          }
        },
        "RoleDTO": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            }
          }
        },
        "UserDTO": {
          "type": "object",
          "properties": {
            "firstName": {
              "type": "string"
            },
            "lastName": {
              "type": "string"
            },
            "email": {
              "type": "string"
            },
            "role": {
              "$ref": "#/components/schemas/RoleDTO"
            }
          }
        },
        "PageResponseProductResponse": {
          "type": "object",
          "properties": {
            "content": {
              "type": "array",
              "items": {
                "$ref": "#/components/schemas/ProductResponse"
              }
            },
            "number": {
              "type": "integer",
              "format": "int32"
            },
            "size": {
              "type": "integer",
              "format": "int32"
            },
            "totalElements": {
              "type": "integer",
              "format": "int64"
            },
            "totalPages": {
              "type": "integer",
              "format": "int32"
            },
            "first": {
              "type": "boolean"
            },
            "last": {
              "type": "boolean"
            }
          }
        },
        "PageResponsePharmacyResponse": {
          "type": "object",
          "properties": {
            "content": {
              "type": "array",
              "items": {
                "$ref": "#/components/schemas/PharmacyResponse"
              }
            },
            "number": {
              "type": "integer",
              "format": "int32"
            },
            "size": {
              "type": "integer",
              "format": "int32"
            },
            "totalElements": {
              "type": "integer",
              "format": "int64"
            },
            "totalPages": {
              "type": "integer",
              "format": "int32"
            },
            "first": {
              "type": "boolean"
            },
            "last": {
              "type": "boolean"
            }
          }
        }
